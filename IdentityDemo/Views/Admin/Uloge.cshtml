@model IEnumerable<Users.Models.AppRole>
@{
    ViewBag.Title = "Uloge";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-left ml-4 mt-4 mb-5">Uloge</h2>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card shadow-sm my-4 border border-primary">
            <div class="card-header bg-primary shadow-sm">
                <h5 class="card-title text-white my-auto">Pregled uloga</h5>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>Ime uloge</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr class="text-center"><td>Ne postoji ni jedna uloga</td></tr>
                    }
                    else
                    {
                        foreach (var role in Model)
                        {
                            <tr class="text-center">
                                <td>@role.Name</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="col-md-4"></div>
</div>