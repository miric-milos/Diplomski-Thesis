@model Users.Models.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registracija</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome/css/all.css" rel="stylesheet" type="text/css">
    <link href="~/Content/mojCSS/global.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous">
    </script>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#01b018">
        <i class="fab fa-hackerrank f-awesome"></i>
        <a class="navbar-brand ml-4 mr-auto" href="#">WEBTECH</a>
    </nav>


    <div class="container">
        <div class="row mt-5">
            <div class="col-md-3"></div>
            <div class="col-md-6 mt-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="card-header">
                            <h4 class="card-title my-auto">Registracija</h4>
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger my-3" })
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                    <div class="card-body">

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="username">Korisnicko Ime</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control border-round", @id = "username" })
                            </div>

                            <div class="form-group">
                                <label for="email">E-Adresa</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-round", @type = "email", @id = "email" })
                            </div>

                            <div class="form-group">
                                <label for="password">Lozinka</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control border-round", @type = "password", @id = "password" })
                            </div>

                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", @id = "rememberMe" })
                                <label for="rememberMe" class="form-check-label">Zapamti me?</label>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary border-round w-100 mt-2">Registracija</button>
                            </div>
                        }

                    </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
