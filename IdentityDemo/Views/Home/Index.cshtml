
@model IEnumerable<Users.Models.Article>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">

    <!--Najnovije-->

    <div class="row">
        <div class="col-md-6">
            @foreach (var article in Model.Take(2))
            {
                <div class="card my-2">
                    <img class="img-fluid" src="data:image/jpg;base64,@Convert.ToBase64String(article.Image)" alt="Slika nekih developera" />
                    <div class="card-body bg-dark">
                        <a href="/Artikli/@article.Id" class="card-title card-title-white">@article.Title</a>
                    </div>
                    <div class="card-footer bg-dark d-flex">
                        <div class="my-auto">
                            <img src="data:image/jpg;base64,@Convert.ToBase64String(article.Author.ProfilePicture)" class="profilepic-sm mr-auto" width="55" height="55" alt="Travis" />
                        </div>
                        <div class="mx-2 my-auto">
                            <a href="#" class="card-text-white">@article.Author.FirstName @article.Author.LastName</a><br />
                            <span class="card-text-white">
                                @article.DatePublished.ToShortDateString()
                            </span>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-6">
            @foreach (var article in Model.Skip(2).Take(2))
            {
                <div class="card my-2">
                    <img class="img-fluid" src="data:image/jpg;base64,@Convert.ToBase64String(article.Image)" alt="Slika nekih developera" />
                    <div class="card-body bg-dark">
                        <a href="/Artikli/@article.Id" class="card-title card-title-white">@article.Title</a>
                    </div>
                    <div class="card-footer bg-dark d-flex">
                        <div class="my-auto">
                            <img src="data:image/jpg;base64,@Convert.ToBase64String(article.Author.ProfilePicture)" class="profilepic-sm mr-auto" width="55" height="55" alt="Travis" />
                        </div>
                        <div class="mx-2 my-auto">
                            <a href="#" class="card-text-white">@article.Author.FirstName @article.Author.LastName</a><br />
                            <span class="card-text-white">
                                @article.DatePublished.ToShortDateString()
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!--Istrazi-->
    <hr class="my-5 separator bg-dark" />
    <div class="my-5"></div>

    <div class="container" id="istrazi">
        <div class="row">
            <div class="col my-auto"><hr class="separator bg-dark" /></div>
            <div class="col my-auto"><h2 class="heading-black text-center">Masinsko Ucenje</h2></div>
            <div class="col my-auto"><hr class="separator bg-dark my-auto" /></div>
        </div>

        <div class="row my-4">
            <div class="col-md-4 my-2">
                <div class="card card-mini shadow-sm">
                    <img src="~/Content/img/minicard1.jpg" alt="" class="card-img-top" height="230" />
                    <div class="card-body">
                        <h4 class="card-title">"The Model for Smart Contracts is Broken," says Charles Hoskinson </h4>
                    </div>
                    <div class="d-flex p-2">
                        <div class="my-auto">
                            <img src="~/Content/img/author-avatar.jpg" class="img-fluid rounded-circle mr-auto" width="55" height="55" alt="Travis" />
                        </div>
                        <div class="mx-2 my-auto">
                            <a href="#">Travis Fitcher</a><br />
