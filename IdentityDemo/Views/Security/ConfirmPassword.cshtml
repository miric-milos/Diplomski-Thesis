
@model Users.Models.ConfirmPasswordViewModel

@{
    ViewBag.Title = "ConfirmPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 py-5">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="text-center card-title my-auto">Potvrdite lozinku da biste nastavili</h5>
                </div>
                <div class="card-body">

                    @Html.ValidationSummary("", new { @class = "text-danger my-3" })

                    <form action="PotvrdiLozinku" method="post">
                        @Html.AntiForgeryToken()
                        @Html.Hidden("returnUrl", Model.ReturnUrl)

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control border-round" })
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-sm btn-success shadow-sm w-100 border-round">Potvrdi lozinku</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>